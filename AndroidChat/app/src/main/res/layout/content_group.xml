<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    tools:showIn="@layout/activity_group"
    tools:context="com.jabravo.android_chat.GroupActivity"
    android:background="@color/background">

    <ScrollView
        android:id="@+id/group_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.86">
        <LinearLayout
            android:id="@+id/group_messages"
            android:orientation="vertical"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1">

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/group_layout_keyboard"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center|bottom"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/group_keyboard"
            android:layout_weight="90"
            android:hint="@string/chat_hint"
            android:inputType="textCapSentences|textAutoCorrect"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/chat_send"
            android:textColor="@drawable/button_text"
            android:background="@drawable/button_rounded"
            android:src="@drawable/ic_send"
            android:id="@+id/group_send"
            android:layout_weight="10" />
    </LinearLayout>


</LinearLayout>
